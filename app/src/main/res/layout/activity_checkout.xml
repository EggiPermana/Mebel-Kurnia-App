<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btn_back_checkout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000D6B"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="14dp"/>

        <TextView
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keranjang saya"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kursi"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imvProduct"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kursi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Info"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10.000 Rp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_kurangi"
                android:backgroundTint="#000D6B"
                app:tint="@color/white"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_tambah"
                android:backgroundTint="#000D6B"
                app:tint="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="Total :"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTotal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginEnd="16dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#000D6B"
            android:text="Checkout"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>